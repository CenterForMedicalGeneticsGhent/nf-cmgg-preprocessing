nextflow_workflow {

    name "Test Workflow COVERAGE"
    script "subworkflows/local/coverage/main.nf"
    workflow "COVERAGE"

    test("coverage targetted bam") {

        when {
            params {
                run_coverage = true
                disable_picard_qc = false
            }
            workflow {
                """
                // ch_bam_bai [meta, bam, bai]
                input[0] = Channel.of([
                    [id: 'test', single_end: false],
                    file(params.test_data['sarscov2']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true),
                    file(params.test_data['sarscov2']['illumina']['test_paired_end_sorted_bam_bai'], checkIfExists: true),
                ])

                // ch_fasta_fai [meta2, fasta, fai]
                input[1] = Channel.of([
                    [id: 'sarscov2'],
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true),
                    file(params.test_data['sarscov2']['genome']['genome_fasta_fai'], checkIfExists: true),
                ])

                // ch_fasta_dict [meta2, dict]
                input[2] = Channel.of([
                    [id: 'sarscov2'],
                    file(params.test_data['sarscov2']['genome']['genome_dict'], checkIfExists: true),
                ])

                // Target interval file
                input[3] = Channel.of(file(params.test_data['sarscov2']['genome']['test_bed'], checkIfExists: true)),

                // Bait interval file
                input[4] = Channel.of(file(params.test_data['sarscov2']['genome']['baits_bed'], checkIfExists: true))
                """
            }
        }

        then {
            assert workflow.success
            // check number of processes executed
            assert workflow.trace.succeeded().size() == 2
        }

    }

    test("coverage wgs bam") {

        when {
            params {
                run_coverage = true
                disable_picard_qc = false
            }
            workflow {
                """
                // ch_bam_bai [meta, bam, bai]
                input[0] = Channel.of([
                    [id: 'test', single_end: false],
                    file(params.test_data['sarscov2']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true),
                    file(params.test_data['sarscov2']['illumina']['test_paired_end_sorted_bam_bai'], checkIfExists: true),
                ])

                // ch_fasta_fai [meta2, fasta, fai]
                input[1] = Channel.of([
                    [id: 'sarscov2'],
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true),
                    file(params.test_data['sarscov2']['genome']['genome_fasta_fai'], checkIfExists: true),
                ])

                // ch_fasta_dict
                input[2] = Channel.empty()

                // Target interval file
                input[3] = Channel.empty()

                // Bait interval file
                input[4] = Channel.empty()
                """
            }
        }

        then {
            assert workflow.success
            // check number of processes executed
            assert workflow.trace.succeeded().size() == 2
        }

    }

}
