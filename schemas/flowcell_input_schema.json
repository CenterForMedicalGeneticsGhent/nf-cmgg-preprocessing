{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-cmgg/preprocessing/master/samplesheet_schema.json",
    "title": "nf-cmgg/preprocessing params.flowcell schema",
    "description": "Schema for the file provided with params.flowcell",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "meta": ["id"],
                "type": "string",
                "pattern": "^[A-Za-z0-9_\\-]+$",
                "description": "Unique flowcell ID"
            },
            "lane": {
                "type": "integer",
                "meta": ["lane"],
                "unique": ["id"],
                "description": "Flowcell lane number"
            },
            "samplesheet": {
                "type": "string",
                "format": "file-path",
                "pattern": "^\\S+\\.csv$",
                "description": "Illumina samplesheet for the flowcell lane"
            },
            "flowcell": {
                "type": "string",
                "format": "file-path",
                "description": "Illumina flowcell directory"
            },
            "sample_info": {
                "schema": "schemas/sampleinfo.json",
                "type": "string",
                "format": "file-path",
                "pattern": "^\\S+\\.csv$",
                "description": "CSV file with sample information, must contain columns 'samplename', 'organism' and 'tag'"
            }
        }
    }
}
