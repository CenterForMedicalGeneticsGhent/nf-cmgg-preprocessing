{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/CenterForMedicalGeneticsGhent/nf-cmgg-preprocessing/master/samplesheet_schema.json",
    "title": "CenterForMedicalGeneticsGhent/nf-cmgg-preprocessing params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "meta": [
                    "id"
                ],
                "unique": true,
                "pattern": "^[a-zA-Z0-9_]+$"
            },
            "samplename": {
                "meta": [
                    "samplename"
                ],
                "unique": [
                    "id"
                ]
            },
            "organism": {
                "meta": [
                    "organism"
                ]
            },
            "tag": {
                "meta": [
                    "tag"
                ]
            },
            "single_end": {
                "meta": [
                    "single_end"
                ],
                "type": "boolean",
                "default": false
            },
            "cram": {
                "type": "string",
                "pattern": "^\\S+(cram)$",
                "format": "file-path",
                "errorMessage": "CRAM file must be provided, cannot contain spaces and must have extension '.bam' or '.cram'"
            }
        }
    }
}
