{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/CenterForMedicalGeneticsGhent/nf-cmgg-preprocessing/master/samplesheet_schema.json",
    "title": "CenterForMedicalGeneticsGhent/nf-cmgg-preprocessing params.fastq schema",
    "description": "Schema for the file provided with params.fastq",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "meta": ["id"],
                "unique": true
            },
            "samplename": {
                "meta": ["samplename"],
                "unique": ["id"]
            },
            "organism": {
                "meta": ["organism"],
                "type": "string",
                "description": "Sample organism",
                "pattern": "^[a-zA-Z0-9_\\s]+$"
            },
            "tag": {
                "meta": ["tag"]
            },
            "library": {
                "meta": ["library"],
                "type": "string",
                "pattern": "^[a-zA-Z0-9_]+$"
            },
            "fastq_1": {
                "type": "string",
                "pattern": "^\\S+\\.f(ast)?q\\.gz$",
                "format": "file-path",
                "errorMessage": "FastQ file for reads 1 must be provided, cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'"
            },
            "fastq_2": {
                "errorMessage": "FastQ file for reads 2 cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'",
                "anyOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.f(ast)?q\\.gz$",
                        "format": "file-path"
                    },
                    {
                        "type": "string",
                        "maxLength": 0
                    }
                ]
            },
            "roi": {
                "meta": ["roi"],
                "type": "string",
                "format": "file-path",
                "description": "Region of interest BED file for coverage analysis",
                "pattern": "^[a-zA-Z0-9_]+.bed$",
                "default": null
            }
        }
    }
}
